{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/mvc.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildDocker",
            "type": "shell",
            "windows": {
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "command": "${workspaceFolder}/scripts/runDockerDebug.ps1 -command debug -srcpath ${workspaceFolder}"
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/runDockerDebug.sh debug"
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/runDockerDebug.sh debug"
            }
        }
    ]
}